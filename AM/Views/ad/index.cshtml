@{
    Layout = "~/Views/Shared/_LayoutGrid.cshtml";
    var typename = "广告";

}
@section head{
    <style>
        .img {
            width: 50px;
            height: 50px;
        }
    </style>
}
<div id="Dlg-Edit" title="窗口" style="width: 500px; height: 200px;" buttons="#buttons">
    <div style="padding: 10px 20px">
        <form method="post" enctype="multipart/form-data">
            <table>
                <tr>
                    <td class="right">
                        F1：
                    </td>
                    <td>
                        <input name="F1" class="easyui-validatebox editInput" />
                        <input type="hidden" name="adid" value="" />
                    </td>
                </tr>
                <tr>
                    <td class="right">
                        广告图片：
                    </td>
                    <td>
                        @*<input name="typelogo" class="easyui-validatebox editInput" />*@
                        <input type="file" name="typelogo" />
                    </td>
                </tr>

            </table>
        </form>
    </div>
</div>
<div id="tb" style="padding: 3px 0px 3px 10px; height: auto">
    <div style="vertical-align: middle">
        F1：
        <input id="s_F1" class="easyui-validatebox searchInput" />

        <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-search" onclick="findData()">查询</a>
    </div>
</div>
@section scripts2{
    var toolbar = [{
    text: '新增',
    iconCls: 'icon-add',
    handler: add
    }, '-', {
    text: '查看',
    iconCls: 'icon-edit',
    handler: view
    }, '-', {
    text: '修改',
    iconCls: 'icon-edit',
    handler: edit
    }, '-', {
    text: '删除',
    iconCls: 'icon-remove',
    handler: del
    }];
}
@section scripts{
    <script>

        var tableName = "ad";
        var sortName = "adid";
        var idField = "adid";
        var sortOrder = "asc";


        var columns = [[
    {
        field: 'adid', title: 'ID', width: 100, sortable: true
    }, {
        field: 'F1', title: 'F1', width: 100, sortable: true
    }]];


        function returnQueryParams() {
            var obj = {
                F1: $("#s_F1").val()
            };
            return obj;
        }
    </script>
}
