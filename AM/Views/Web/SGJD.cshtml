@{
    Layout = "~/Views/Shared/_LayoutWeb.cshtml";
    ViewBag.Title = "事故鉴定申请表";
}
<!--表格申请-->
<div class="apply-out">
    <!--您的位置-->
    <ul class="location">
        <p>您现在的位置：</p>
        <li><a href="/" name="1">首页</a></li>
        <li>></li>
        <li><a href="/web/SGJD#1">事故鉴定申请表</a></li>
    </ul>

    <!--表格-->
    <div class="apply-box">
        <ul class="apply-but apply-but2">
            <li><a href="/web/FASJ#1">专业非标方案设计</a></li>
            <li><a href="/web/FALZ#1">专业非标方案论证</a></li>
            <li><a href="/web/CPJD#1">产品鉴定申请表</a></li>
            <li class="apply-but1"><a href="/web/SGJD#1">事故鉴定申请表</a></li>
        </ul>

        <div class="apply-sm-box">
            <h3>
                高空机械工程技术研究院
                <br />高空机械事故勘察/分析/鉴定申请表
            </h3>
            <form id="form1" onsubmit="return false">
                <div class="apply-table">
                    <h4>公司名称<span>COMPANY NAME</span></h4>
                    <div>
                        <input type="text" name="accidentcompanyname" placeholder="请输入公司名称" class="width1" />
                        <input type="hidden" name="userid" value="@ViewBag.UserID" />
                    </div>
                </div>

                <div class="apply-table">
                    <h4>公司地址<span>COMPANY ADDRESS</span></h4>
                    <div><input type="text" name="accidentcompanyaddr" placeholder="请输入公司地址" class="width1" /></div>
                </div>

                <div class="apply-table">
                    <h4>工程名称<span>PROJIET NAME</span></h4>
                    <div><input type="text" name="accidentnenginename" placeholder="请输入工程名称" class="width1" /></div>
                </div>

                <div class="apply-table">
                    <h4>工程地址<span>PROJIET ADDRESS</span></h4>
                    <div><input type="text" name="accidentnenginenaddr" placeholder="请输入工程地址" class="width1" /></div>
                </div>


                <div class="apply-table">
                    <h4>设备名称<span>DEVICE NAME</span></h4>
                    <div><input type="text" name="accidentgoodsname" placeholder="请输入设备名称" class="width4" /></div>
                </div>

                <div class="apply-table">
                    <h4 class="title-width">设备型号<span>DEVICE TYPE</span></h4>
                    <div><input type="text" name="accidentgoodstype" placeholder="请输入设备型号" class="width3" /></div>
                </div>

                <div class="clear"></div>
                <div class="apply-table test-content">
                    <h4>申请类型<span>APPLICATION TYPE</span></h4>
                    <div>
                        <label><input type="checkbox" name="accidenttype" value="勘察"><span>勘察</span></label>
                        <label><input type="checkbox" name="accidenttype" value="鉴定"><span>鉴定</span></label>
                        <label><input type="checkbox" name="accidenttype" value="分析"><span>分析</span></label>
                    </div>
                </div>

                <div class="apply-table">
                    <h4 class="title-width">事故情况描述<span>ACCIDENT TIME</span></h4>
                    <div><input type="text" name="accidentdescription" placeholder="请输入姓名" class="width3" /></div>
                </div>
                <div class="apply-table cl">
                    <h4>事故情况描述<span>ACCIDENT DESCRIPTION</span></h4>
                    <div><textarea name="accidentoccurrencetime" class="Paper_main_text" placeholder="请输入事故描述内容"></textarea></div>
                </div>

                <div class="apply-table cl">
                    <h4 class="title-width">联系人<span>CONTACT PERSON</span></h4>
                    <div><input type="text" name="accidentlinkname" placeholder="请输入姓名" class="width3" /></div>
                </div>

                <div class="apply-table">
                    <h4 class="title-width">联系电话<span>CONTACT PHONE</span></h4>
                    <div><input type="text" name="accidentlinktel" placeholder="请输入电话/手机" class="width3" /></div>
                </div>

                <div class="apply-table">
                    <h4 class="title-width">邮箱<span>ECONOMIC TYPE</span></h4>
                    <div><input type="text" name="accidentemail " placeholder="请输邮箱" class="width3" /></div>
                </div>

                <div class="apply-table-but cl">
                    <input type="submit" value="提交" id="btnOK" class="submit" /> <input type="reset" value="重置" class="reset" onclick="reset()" />
                </div>
            </form>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Content/My97DatePicker/WdatePicker.js"></script>
    <script>
        $(function () {
            $("#li_js").addClass("index");
            //提交表单
            $("#btnOK").click(function () {
                var data = $('#form1').serialize();
                $.post("/Client/postupappraisalaccident", data, function (d) {
                    //var result = eval('(' + d + ')'); //处理Json
                    //alert("x" + d.message+d.code);
                    if (d.code == 1) {
                        alert("提交成功！申请费用：" + d.price);
                    } else {
                        alert("提交失败！原因：" + d.message);
                    }
                });
            });
        })
        function reset() {
            $("input").each(function (e) {
                $(this).val("");
            });
        }
    </script>
}
