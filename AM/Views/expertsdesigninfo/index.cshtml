        var sortOrder = "asc";

        var columns = [[
    {
        field: 'designlinkname', title: '联系人', width: 100, sortable: true
    }, {
        field: 'designlinktel', title: '联系电话', width: 100, sortable: true
    }, {
        field: 'designcompanyname', title: '公司名称', width: 200, sortable: true
    }, {
        field: 'designapplicationdate', title: '申请时间', width: 150, sortable: true
    }, {
        field: 'ispay', title: '是否支付', width: 100, sortable: true
    }, {
        field: 'state', title: '处理状态', width: 100, sortable: true
    }]];
        function toExcel() {

        }

        function returnQueryParams() {
            var obj = {
                designcompanyname: $("#s_designcompanyname").val(),
