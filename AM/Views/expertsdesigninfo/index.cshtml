@{
    Layout = "~/Views/Shared/_LayoutGrid.cshtml";
}
<div id="Dlg-Edit" title="窗口" style="width: 670px; height: 400px;" buttons="#buttons">
    <div style="padding: 10px 10px 40px 40px;">
        <form method="post">
            <table>
                <tr>
                    <td class="right">公司名称：
                    </td>
                    <td>
                        <input name="designcompanyname" class="easyui-validatebox editInput" required='true' />
                    </td>
                </tr>
                <tr>
                    <td class="right">公司地址：
                    </td>
                    <td>
                        <input name="designcompanyaddr" class="easyui-validatebox editInput" />
                    </td>
                </tr>
                <tr>
                    <td class="right">工程名称：
                    </td>
                    <td>
                        <input name="designenginename" class="easyui-validatebox editInput" />
                    </td>
                </tr>
                <tr>
                    <td class="right">工程地址：
                    </td>
                    <td>
                        <input name="designengineaddr" class="easyui-validatebox editInput" />
                    </td>
                </tr>
                <tr>
                    <td class="right">产品名称：
                    </td>
                    <td>
                        <input name="designgoodsname" class="easyui-validatebox editInput" />
                    </td>
                </tr>
                <tr>
                    <td class="right">产品型号：
                    </td>
                    <td>
                        <input name="designgoodstype" class="easyui-validatebox editInput" />
                    </td>
                </tr>
                <tr>
                    <td class="right">技术要求：
                    </td>
                    <td>
                        <input name="designtechnologyrequest" class="easyui-validatebox editInput" />
                    </td>
                </tr>
                <tr>
                    <td class="right">完成时间：
                    </td>
                    <td>
                        <input type="text" name="designcompletedate" editable="false" class="easyui-datebox" />
                    </td>
                </tr>
                <tr>
                    <td class="right">申请时间：
                    </td>
                    <td>
                        <input type="text" name="designapplicationdate" editable="false" class="easyui-datebox" />
                    </td>
                </tr>
                <tr>
                    <td class="right">联系人：
                    </td>
                    <td>
                        <input name="designlinkname" class="easyui-validatebox editInput" required='true' />
                    </td>
                </tr>
                <tr>
                    <td class="right">联系电话：
                    </td>
                    <td>
                        <input name="designlinktel" class="easyui-validatebox editInput" />
                    </td>
                </tr>
                <tr>
                    <td class="right">邮箱：
                    </td>
                    <td>
                        <input name="designemail" class="easyui-validatebox editInput" />
                    </td>
                </tr>
                <tr>
                    <td class="right">状态：
                    </td>
                    <td>
                        <input name="state" id="state" class="easyui-combobox editInput" data-options="textField:'Value',valueField:'Key',url:'/Tools/GetState'" />
                    </td>
                </tr>
                <tr>
                    <td class="right">是否支付：
                    </td>
                    <td>
                        <input name="ispay" type="radio" value="true" />已支付
                        <input name="ispay" type="radio" value="false" />未支付
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>
<div id="tb" style="padding: 3px 0px 3px 10px; height: auto">
    <div style="vertical-align: middle">
        公司名称：
                        <input id="s_designcompanyname" class="easyui-validatebox searchInput" />
        联系人：
                        <input id="s_designlinkname" class="easyui-validatebox searchInput" />
        联系电话：
                        <input id="s_designlinktel" class="easyui-validatebox searchInput" />
        处理状态：
                    <input id="s_state" class="easyui-combobox searchInput" data-options="textField:'Value',valueField:'Key',url:'/Tools/GetState2'" />
        <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-search" onclick="findData()">查询</a>
    </div>
</div>
