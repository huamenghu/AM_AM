@{
    Layout = "~/Views/Shared/_LayoutGrid.cshtml";
}
<div id="Dlg-Edit" title="窗口" style="width: 670px; height: 400px;" buttons="#buttons">
    <div style="padding: 10px 10px 40px 40px;">
        <form method="post">
            <table>
                <tr>
                    <td class="right">公司名称：
                    </td>
                    <td>
                        <input name="accidentcompanyname" class="easyui-validatebox editInput" required='true' />
                    </td>
                </tr>
                <tr>
                    <td class="right">公司地址：
                    </td>
                    <td>
                        <input name="accidentcompanyaddr" class="easyui-validatebox editInput" />
                    </td>
                </tr>
                <tr>
                    <td class="right">工程名称：
                    </td>
                    <td>
                        <input name="accidentnenginename" class="easyui-validatebox editInput" />
                    </td>
                </tr>
                <tr>
                    <td class="right">工程地址：
                    </td>
                    <td>
                        <input name="accidentnenginenaddr" class="easyui-validatebox editInput" />
                    </td>
                </tr>
                <tr>
                    <td class="right">设备名称：
                    </td>
                    <td>
                        <input name="accidentgoodsname" class="easyui-validatebox editInput" />
                    </td>
                </tr>
                <tr>
                    <td class="right">设备型号：
                    </td>
                    <td>
                        <input name="accidentgoodstype" class="easyui-validatebox editInput" />
                    </td>
                </tr>
                <tr>
                    <td class="right">申请类型：
                    </td>
                    <td>
                        <input name="accidenttype" class="easyui-validatebox editInput" />
                    </td>
                </tr>
                <tr>
                    <td class="right">事故情况描述：
                    </td>
                    <td>
                        <input name="accidentdescription" class="easyui-validatebox editInput" />
                    </td>
                </tr>
                <tr>
                    <td class="right">事故发生时间：
                    </td>
                    <td>
                        <input type="text" name="accidentoccurrencetime" editable="false" class="easyui-datebox" />
                    </td>
                </tr>
                <tr>
                    <td class="right">联系人：
                    </td>
                    <td>
                        <input name="accidentlinkname" class="easyui-validatebox editInput" required='true' />
                    </td>
                </tr>
                <tr>
                    <td class="right">联系电话：
                    </td>
                    <td>
                        <input name="accidentlinktel" class="easyui-validatebox editInput" />
                    </td>
                </tr>
                <tr>
                    <td class="right">邮箱：
                    </td>
                    <td>
                        <input name="accidentemail" class="easyui-validatebox editInput" />
                    </td>
                </tr>
                <tr>
                    <td class="right">状态：
                    </td>
                    <td>
                        <input name="state" id="state" class="easyui-combobox editInput" data-options="textField:'Value',valueField:'Key',url:'/Tools/GetState'" />
                    </td>
                </tr>
                <tr>
                    <td class="right">是否支付：
                    </td>
                    <td>
                        <input name="ispay" type="radio" value="true" />已支付
                        <input name="ispay" type="radio" value="false" />未支付
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>
<div id="tb" style="padding: 3px 0px 3px 10px; height: auto">
    <div style="vertical-align: middle">
        公司名称：
                        <input id="s_accidentcompanyname" class="easyui-validatebox searchInput" />
        联系人：
                        <input id="s_accidentlinkname" class="easyui-validatebox searchInput" />
        联系电话：
                        <input id="s_accidentlinktel" class="easyui-validatebox searchInput" />
        申请类型：
                        <input id="s_accidenttype" class="easyui-validatebox searchInput" />
        处理状态：
                    <input id="s_state" class="easyui-combobox searchInput" data-options="textField:'Value',valueField:'Key',url:'/Tools/GetState2'" />
        <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-search" onclick="findData()">查询</a>
    </div>
</div>
