    }, {
        field: 'accidentcompanyname', title: '公司名称', width: 200, sortable: true
    }, {
        field: 'accidentoccurrencetime', title: '发生时间', width: 150, sortable: true
    }, {
        field: 'ispay', title: '是否支付', width: 100, sortable: true
